@model InventoryApp.Models.Inventory

@{
    ViewData["Title"] = "Edit Inventory";
}

<h1>Edit Inventory</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <h4>Basic Info</h4>
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <hr />
    <h4>Custom Fields (leave blank to hide)</h4>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label class="form-label">Text Field 1 Name</label>
            <input asp-for="String1Name" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Text Field 2 Name</label>
            <input asp-for="String2Name" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Text Field 3 Name</label>
            <input asp-for="String3Name" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label class="form-label">Number Field 1 Name</label>
            <input asp-for="Int1Name" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Number Field 2 Name</label>
            <input asp-for="Int2Name" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Number Field 3 Name</label>
            <input asp-for="Int3Name" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label class="form-label">Checkbox Field 1 Name</label>
            <input asp-for="Bool1Name" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Checkbox Field 2 Name</label>
            <input asp-for="Bool2Name" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Checkbox Field 3 Name</label>
            <input asp-for="Bool3Name" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>