@model List<InventoryApp.Models.Inventory>

@{
    ViewData["Title"] = "Search Results";
}

<h1>Search Results for "@ViewBag.Query"</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Creator</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inv in Model)
            {
                <tr>
                    <td><a asp-action="Details" asp-route-id="@inv.Id">@inv.Title</a></td>
                    <td>@inv.Description</td>
                    <td>@inv.Creator?.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No inventories found.</p>
}