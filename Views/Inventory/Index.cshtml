@model List<InventoryApp.Models.Inventory>

@{
    ViewData["Title"] = "Inventories";
}

<h1>Inventories</h1>

@if (User.Identity!.IsAuthenticated)
{
    <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
}

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Creator</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inv in Model)
        {
            <tr>
                <td>@inv.Title</td>
                <td>@inv.Description</td>
                <td>@inv.Creator?.Email</td>
                <td>@inv.CreatedAt.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>